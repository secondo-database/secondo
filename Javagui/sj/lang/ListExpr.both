        System.err.println(" the ListExpr object is not a text atom.");
      }
    }
#ifdef PERSISTENT
   long v = getValue();
   return getTextBytes(v);
#else
    if(value==null || !(value instanceof File)){ // main memory based
       return  ((String)this.value).getBytes();
    }else{
       try{
         File F = (File) value;
         int len = (int)F.length();
         byte[] content = new byte[(int)len];
         BufferedInputStream in = new BufferedInputStream(new FileInputStream(F));
         int pos = 0;
         while(pos<len){
             pos += in.read(content,pos,len-pos);
         }
         in.close();
         return content;
       }catch(Exception e){
          if(DEBUG_MODE)
            e.printStackTrace();
          System.err.println("Cannot load a TextAtom value from its temporal file ");
          System.err.println(" empty String is returned");
          return new byte[0];
       }
    }
#endif
