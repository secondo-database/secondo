/*
2.2.6 Destroying lists

*/
private void destroyValue(){
   int at = atomType();
   switch(at){
      case INT_ATOM :{
            dbarray.delete(key);
            break;
      }
      case REAL_ATOM :{
            dbarray.delete(key);
            break;
      }
      case BOOL_ATOM :{
            dbarray.delete(key);
            break;
      }
      case SYMBOL_ATOM :{
          long v = getValue();
          dbarray.delete(v);
          dbarray.delete(key);
          break;
      }
      case STRING_ATOM :{
          long v = getValue();
          dbarray.delete(v);
          dbarray.delete(key);
          break;
      }
      case TEXT_ATOM :{
          long v = getValue();
          dbarray.delete(v);
          dbarray.delete(key);
          break;
      }
      case NO_ATOM:{
         long v = getValue(); 
         if(v!=0){ // destros inner list if present
            (new ListExpr(v)).destroyrec();
         }
         dbarray.delete(key); // destroy itself
         break;
      }
      default: {
          System.err.println("DestroyValue: unknown atomtype detected"+at);
          System.out.println(" key = "+ key);
      }
   }
}

