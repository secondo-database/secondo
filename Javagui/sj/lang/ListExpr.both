#ifdef PERSISTENT
/** removes a complte list recursively **/
private void destroyrec(){
   int at = atomType();
   if(at!=NO_ATOM){
       destroyValue();
       return;
   }
   long next = getNext();
   int count=0;
   while (next!=0){
      ListExpr LE = new ListExpr(next);
      next = LE.getNext();
      count++;
      LE.destroyValue();
   }
   destroyValue();
}
#endif

/** Returns true if this ListExpr object is an empty list, false
  *  otherwise.
  **/
public boolean isEmpty () {
#ifndef PERSISTENT
    // If is a NO_ATOM and ~value~ and ~next~ are empty, then it is an empty list.
    if ((this.type == ListExpr.NO_ATOM) && (this.value == null) && (this.next
        == null)) {
      return  true;
    }
    // else it is not empty.
    return  false;
#else
    return (getValue()==0) && (getNext()==0) && (atomType()==NO_ATOM);
#endif
}


