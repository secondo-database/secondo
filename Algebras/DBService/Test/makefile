#OperatorLetDConsumeTest.o : $(USER_DIR)/OperatorLetDConsumeTest.cpp $(GMOCK_HEADERS)
#	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) $(DEFAULTCCFLAGS) \
#    -c $< -o $@

#DBServiceManagerTest.o : $(USER_DIR)/DBServiceManagerTest.cpp $(GMOCK_HEADERS)
#	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

#CommunicationServerTest.o : $(USER_DIR)/CommunicationServerTest.cpp $(GMOCK_HEADERS)
#	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(DBSERVICE_INCLUDE_DIRS) -c $< -o $@

CommunicationUtilsTest.o : $(USER_DIR)/CommunicationUtilsTest.cpp $(GMOCK_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) -c $< -o $@

ReplicationUtilsTest.o : $(USER_DIR)/ReplicationUtilsTest.cpp $(GMOCK_HEADERS) \
    $(DBSERVICE_DIR)/ReplicationUtils.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) -c $< -o $@

RelationInfoTest.o : $(USER_DIR)/RelationInfoTest.cpp \
    $(DBSERVICE_DIR)/RelationInfo.cpp $(GMOCK_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) -c $< -o $@

LocationInfoTest.o : $(USER_DIR)/LocationInfoTest.cpp \
    $(DBSERVICE_DIR)/LocationInfo.cpp $(GMOCK_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) -c $< -o $@

CommandBuilderTest.o : $(USER_DIR)/CommandBuilderTest.cpp \
    $(DBSERVICE_DIR)/CommandBuilder.cpp $(GMOCK_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) -I $(INCLUDE_DIR) -c $< -o $@

TraceSettingsTest.o : $(USER_DIR)/TraceSettingsTest.cpp \
    $(DBSERVICE_DIR)/TraceSettings.cpp $(GMOCK_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I $(DBSERVICE_DIR) -c $< -o $@

SuiteDBService : CommunicationUtilsTest.o  ReplicationUtilsTest.o \
    RelationInfoTest.o LocationInfoTest.o CommandBuilderTest.o \
    TraceSettingsTest.o \
    gmock_main.a \
    $(LIBDBSERVICE)# $(LIBDISTRIBUTED2) $(LIBUTILS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $^ -o $@ -lpthread $(COMMON_LD_FLAGS)
