query [const grid3 value (1.2 3.4 5.6 (duration (1 0)))];

#######################################
# mtgrid                              #
#######################################

#testcase visualization of a Tile Algebra mtgrid object
#yields (mtgrid (1.2 3.4 5.6 (duration (1 0))))
query [const mtgrid value (1.2 3.4 5.6 (duration (1 0)))];

#######################################
