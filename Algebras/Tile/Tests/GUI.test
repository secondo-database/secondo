#######################################
# tgrid                               #
#######################################

#testcase visualization of a Tile Algebra tgrid object
#yields (tgrid (1.2 3.4 5.6))
query [const tgrid value (1.2 3.4 5.6)];

#######################################
# grid3                               #
#######################################

#testcase visualization of a Raster2 Algebra grid3 object
