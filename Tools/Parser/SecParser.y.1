extern int yylex();

string* yacc_outtext;

typedef char cstring[50];
cstring param1, param2, paramname, paramtype, paramtype2;
int paramno;
stack<string> paramstack;

extern void yyerror( char* s );

void emptystack(){
   while(!paramstack.empty())
        paramstack.pop();
}


void PRINTF (char *s)
{
  (*yacc_outtext).append( s );
}

void PRINT (int i)
{
  string temp;
  NestedText::CopyOut( i, temp );
  *yacc_outtext += temp;
}
