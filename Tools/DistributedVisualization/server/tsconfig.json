{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "types": ["node"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es5","es2015.promise","dom", "scripthost"]
    },
    "compileOnSave": true,
    "paths": {
              "*": [
                  "node_modules/*",
                  "src/types/*"
              ]
          },
    "include": [
      "src/**/*"
    ]
  }
  